<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tawasul</title>

    <!-- 🔹 مكتبات Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- 🔹 التصميم المخصص -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tawasul.styles.css" asp-append-version="true" />

    <!-- 🔹 الخطوط -->
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700;800&display=swap" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- 🔹 الهيدر الجديد -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- 🔹 الشعار الجديد -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <span class="logo-text">Tawasul</span>
                    <span class="logo-emoji">💬</span>
                </a>

                <!-- 🔹 زر القائمة للموبايل -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="تبديل التنقل">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- 🔹 عناصر التنقل -->
                <div class="collapse navbar-collapse" id="navbarMain">
                    @* <!-- 🔹 القائمة الرئيسية -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Chat" asp-action="Index">
                                    <i class="bi bi-chat-dots me-1"></i>المحادثات
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check me-1"></i>الخصوصية
                            </a>
                        </li>
                    </ul> *@

                    <!-- 🔹 القائمة الجانبية -->
                    @* <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <!-- 🔹 معلومات المستخدم -->
                            <li class="nav-item d-flex align-items-center me-3">
                                <span class="text-muted me-2">👋 مرحبًا،</span>
                                <span class="fw-semibold text-primary">@User.Identity!.Name</span>
                            </li>

                            <!-- 🔹 رابط الحساب -->
                            <li class="nav-item me-2">
                                <a class="nav-link text-dark" asp-controller="Manage" asp-action="Index">
                                    <i class="bi bi-person-circle me-1"></i>حسابي
                                </a>
                            </li>

                            <!-- 🔹 زر تسجيل الخروج -->
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-box-arrow-right me-1"></i>تسجيل الخروج
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- 🔹 أزرار الدخول للتسجيل للزوار -->
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-primary btn-sm" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>تسجيل الدخول
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-success btn-sm" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>إنشاء حساب
                                </a>
                            </li>
                        }
                    </ul> *@
                </div>
            </div>
        </nav>
    </header>

    <!-- 🔹 المحتوى الرئيسي -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   

    <!-- 🔹 السكربتات -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>