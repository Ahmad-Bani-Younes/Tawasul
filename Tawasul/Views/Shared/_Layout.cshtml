@inject Microsoft.AspNetCore.Identity.UserManager<Tawasul.Models.ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tawasul</title>

    <!-- 🔹 مكتبات Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- 🔹 التصميم المخصص -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tawasul.styles.css" asp-append-version="true" />

    <!-- 🔹 الخطوط -->
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700;800&display=swap" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body data-user-id="@(User.FindFirstValue(ClaimTypes.NameIdentifier) ?? "")">
    <!-- 🔹 الهيدر الجديد -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- 🔹 الشعار الجديد -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <span class="logo-text">Tawasul</span>
                    <span class="logo-emoji">💬</span>
                </a>

                <!-- 🔹 زر القائمة للموبايل -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="تبديل التنقل">
                    <span class="navbar-toggler-icon"></span>
                </button>

               
            </div>
        </nav>
    </header>

    <!-- 🔹 المحتوى الرئيسي -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- 🔹 السكربتات -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>