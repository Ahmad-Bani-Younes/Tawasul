@model Tawasul.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "إنشاء حساب جديد";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="auth-container">
    <div class="auth-card">
        <!-- 🔹 الهيدر -->
        <div class="auth-header">
            <span class="auth-logo">Tawasul</span>
            <p class="auth-subtitle">انضم إلى مجتمعنا</p>
        </div>

        <!-- 🔹 الجسم -->
        <div class="auth-body">
            <h1 class="auth-title">أنشئ حسابك</h1>
            <p class="auth-description">انضم إلى منصة الدردشة الحديثة</p>

            <!-- 🔹 رسائل الخطأ -->
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <form asp-action="Register" method="post" class="auth-form">
                @Html.AntiForgeryToken()

                <!-- 🔹 الاسم الكامل -->
              
                    <div class="form-group">
                        <label asp-for="DisplayName" class="form-label">
                            <i class="bi bi-person me-1"></i>الاسم الأول
                        </label>
                        <input asp-for="DisplayName" class="form-control"
                               placeholder="ادخل اسمك "
                               required />
                        <span asp-validation-for="DisplayName" class="text-danger"></span>
                    </div>
                <!-- 🔹 البريد الإلكتروني -->
                <div class="form-group">
                    <label asp-for="Email" class="form-label">
                        <i class="bi bi-envelope me-1"></i>البريد الإلكتروني
                    </label>
                    <input asp-for="Email" class="form-control"
                           type="email"
                           placeholder="ادخل بريدك الإلكتروني"
                           required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- 🔹 كلمة المرور -->
                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="bi bi-lock me-1"></i>كلمة المرور
                    </label>
                    <input asp-for="Password" class="form-control"
                           type="password"
                           placeholder="أنشئ كلمة مرور قوية"
                           required />
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <!-- 🔹 مؤشر قوة كلمة المرور -->
                    <div class="password-strength">
                        <div class="strength-bar">
                            <div class="strength-fill strength-weak"></div>
                        </div>
                        <div class="strength-text">قوة كلمة المرور: ضعيفة</div>
                    </div>
                </div>

            
         

                <!-- 🔹 متطلبات كلمة المرور -->
                <div class="register-requirements">
                    <div class="requirements-title">متطلبات كلمة المرور:</div>
                    <ul class="requirements-list">
                        <li>8 أحرف على الأقل</li>
                        <li>حرف كبير وصغير على الأقل</li>
                        <li>رقم واحد على الأقل</li>
                        <li>رمز خاص واحد على الأقل</li>
                    </ul>
                </div>

        

                <!-- 🔹 زر الإرسال -->
                <button type="submit" class="auth-submit-btn">
                    <i class="bi bi-person-plus me-2"></i>
                    إنشاء الحساب
                </button>

                <!-- 🔹 الروابط الإضافية -->
                <div class="auth-links">
                    <a asp-action="Login" class="auth-link">
                        <i class="bi bi-box-arrow-in-right me-1"></i>
                        لديك حساب بالفعل؟ سجل الدخول
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth.js" asp-append-version="true"></script>

    <!-- 🔹 التحقق من الصحة من جانب العميل -->
    <partial name="_ValidationScriptsPartial" />

    <script>
        // 🔹 تهيئة خاصة بصفحة التسجيل
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof AuthUtils !== 'undefined' && AuthUtils.initRegisterPage) {
                AuthUtils.initRegisterPage();
            }
        });
    </script>
}