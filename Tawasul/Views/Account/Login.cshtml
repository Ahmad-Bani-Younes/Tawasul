@model Tawasul.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "تسجيل الدخول";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="auth-container">
    <div class="auth-card">
        <!-- 🔹 الهيدر -->
        <div class="auth-header">
            <span class="auth-logo">Tawasul</span>
            <p class="auth-subtitle">منصة الدردشة الحديثة</p>
        </div>

        <!-- 🔹 الجسم -->
        <div class="auth-body">
            <h1 class="auth-title">مرحبًا بعودتك</h1>
            <p class="auth-description">سجل الدخول لمتابعة المحادثات</p>

            <form asp-action="Login" method="post" class="auth-form">
                @Html.AntiForgeryToken()

                <!-- 🔹 البريد الإلكتروني -->
                <div class="form-group">
                    <label asp-for="Email" class="form-label">
                        <i class="bi bi-envelope me-1"></i>البريد الإلكتروني
                    </label>
                    <input asp-for="Email" class="form-control"
                           placeholder="ادخل بريدك الإلكتروني"
                           required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- 🔹 كلمة المرور -->
                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="bi bi-lock me-1"></i>كلمة المرور
                    </label>
                    <input asp-for="Password" class="form-control"
                           type="password"
                           placeholder="ادخل كلمة المرور"
                           required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- 🔹 زر الإرسال -->
                <button type="submit" class="auth-submit-btn">
                    <i class="bi bi-box-arrow-in-right me-2"></i>
                    تسجيل الدخول
                </button>

                <!-- 🔹 الروابط الإضافية -->
                <div class="auth-links">
                    <a asp-action="Register" class="auth-link">
                        <i class="bi bi-person-plus me-1"></i>
                        إنشاء حساب جديد
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth.js" asp-append-version="true"></script>

    <!-- 🔹 التحقق من الصحة من جانب العميل -->
    <partial name="_ValidationScriptsPartial" />
}