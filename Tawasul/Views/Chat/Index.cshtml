<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

<script>
    // ✅ إنشاء اتصال SignalR
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/hubs/tawasul")
        .build();

  

    // ✅ استقبال الرسالة من السيرفر
    connection.on("ReceiveMessage", (msg) => {
        console.log("📩 Received:", msg);

        // 🧠 تجاهل الرسالة إذا المرسل هو المستخدم الحالي
        if (msg.senderId === currentUserId) return;

        // ✅ إذا المستخدم داخل نفس المحادثة المفتوحة
        if (msg.conversationId === currentConvId) {
            appendMessage(msg);
        } else {
            // 🔵 إذا كانت رسالة لمحادثة أخرى → أضف Badge
            const item = $(`.conv-item[data-id='${msg.conversationId}']`);
            if (item.length) {
                let badge = item.find(".badge-unread");
                if (badge.length === 0) {
                    item.find(".fw-bold")
                        .after(`<span class="badge bg-primary rounded-pill badge-unread ms-2">1</span>`);
                } else {
                    let count = parseInt(badge.text()) || 0;
                    badge.text(count + 1);
                }
            } else {
                console.warn("⚠️ لم يتم العثور على العنصر للمحادثة:", msg.conversationId);
            }
        }
    });

    // ✅ مراقبة حالة المستخدمين (Online / Offline)
    connection.on("UserStatusChanged", (userId, isOnline) => {
        console.log(`👤 المستخدم ${userId} الآن ${isOnline ? "متصل" : "غير متصل"}`);
    });

    // ✅ بدء الاتصال
    connection.start()
        .then(() => console.log("✅ Connected to ChatHub!"))
        .catch(err => console.error("❌ Hub Error:", err));

    // ✅ عند الضغط على محادثة
    $(document).on("click", ".conv-item", function () {
        const id = $(this).data("id");
        currentConvId = id;

        // 🟢 إزالة البادج
        $(this).find(".badge-unread").remove();

        // انضم لغرفة SignalR
        if (connection.state === signalR.HubConnectionState.Connected) {
            connection.invoke("JoinConversation", id.toString());
        }
    });

       // عند تعديل رسالة
    connection.on("MessageEdited", (msg) => {
        const div = $(`.msg[data-id='${msg.id}']`);
        div.find(".msg-content > div:first").text(msg.text);
        if (div.find(".text-muted.fst-italic").length === 0)
            div.find(".msg-content").append(`<small class="text-muted fst-italic">(معدلة)</small>`);
    });

    // عند حذف رسالة
    connection.on("MessageDeleted", (msg) => {
        const div = $(`.msg[data-id='${msg.id}']`);
        div.html('<div class="text-muted fst-italic">🚫 تم حذف هذه الرسالة</div>');
    });




</script>

