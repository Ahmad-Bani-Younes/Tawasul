            if (item.length) {
                let badge = item.find(".badge-unread");
                if (badge.length === 0) {
                    item.find(".fw-bold")
                        .after(`<span class="badge bg-primary rounded-pill badge-unread ms-2">1</span>`);
                } else {
                    let count = parseInt(badge.text()) || 0;
                    badge.text(count + 1);
                }
            } else {
                console.warn("⚠️ لم يتم العثور على العنصر للمحادثة:", msg.conversationId);
            }
        }
    });

    // ✅ مراقبة حالة المستخدمين (Online / Offline)
    connection.on("UserStatusChanged", (userId, isOnline) => {
        console.log(`👤 المستخدم ${userId} الآن ${isOnline ? "متصل" : "غير متصل"}`);
    });

    // ✅ بدء الاتصال
